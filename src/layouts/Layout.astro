		<script>
			// メニュー開閉ロジック
			function setupMobileMenu() {
				const menuBtn = document.getElementById('menu-btn');
				const closeMenuBtn = document.getElementById('close-menu-btn');
				const mobileMenuBackdrop = document.getElementById('mobile-menu-backdrop');
				const mobileMenuDrawer = document.getElementById('mobile-menu-drawer');

				if (menuBtn && closeMenuBtn && mobileMenuBackdrop && mobileMenuDrawer) {
					// メニューを開く
					const openMenu = () => {
						mobileMenuBackdrop.classList.remove('opacity-0', 'pointer-events-none');
						mobileMenuBackdrop.classList.add('opacity-100', 'pointer-events-auto');
						
						mobileMenuDrawer.classList.remove('translate-x-full');
						mobileMenuDrawer.classList.add('translate-x-0');
						
						document.body.style.overflow = 'hidden'; // 背景スクロール固定
					};

					// メニューを閉じる
					const closeMenu = () => {
						mobileMenuBackdrop.classList.remove('opacity-100', 'pointer-events-auto');
						mobileMenuBackdrop.classList.add('opacity-0', 'pointer-events-none');
						
						mobileMenuDrawer.classList.remove('translate-x-0');
						mobileMenuDrawer.classList.add('translate-x-full');
						
						document.body.style.overflow = ''; // 背景スクロール解除
					};

					menuBtn.addEventListener('click', (e) => {
						e.stopPropagation();
						openMenu();
					});

					closeMenuBtn.addEventListener('click', () => {
						closeMenu();
					});

					mobileMenuBackdrop.addEventListener('click', () => {
						closeMenu();
					});

					// リンククリックで閉じる
					const links = mobileMenuDrawer.querySelectorAll('a');
					links.forEach(link => {
						link.addEventListener('click', () => {
							closeMenu();
						});
					});
				}
			}

			// 初期化
			setupMobileMenu();

			// Astro View Transitions 対応
			document.addEventListener('astro:page-load', setupMobileMenu);
		</script>
	</body>
</html>
