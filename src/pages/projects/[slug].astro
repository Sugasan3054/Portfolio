---
import Layout from '../../layouts/Layout.astro';
import { projects } from '../../data/projects';

// 1. ÂÖ®„Éó„É≠„Ç∏„Çß„ÇØ„Éà„ÅÆ„Éë„ÇπÔºàURLÔºâ„ÇíÁîüÊàê„Åô„Çã
export async function getStaticPaths() {
  return projects.map((project) => ({
    params: { slug: project.slug }, // URL„ÅÆ [slug] ÈÉ®ÂàÜ„Å´ÂØæÂøú
    props: { project }, // „Éö„Éº„Ç∏„Å´Ê∏°„Åô„Éá„Éº„Çø
  }));
}

// 2. „Éá„Éº„Çø„ÇíÂèó„ÅëÂèñ„Çã
const { project } = Astro.props;
---

<Layout title={`${project.title} | Projects`}>
  <div class="w-full bg-slate-900 border-b border-slate-800 pb-12 pt-8 px-4">
    <div class="max-w-6xl mx-auto">
      <a href="/projects" class="inline-flex items-center text-sm text-muted hover:text-primary mb-6 transition-colors">
        ‚Üê „Éó„É≠„Ç∏„Çß„ÇØ„Éà‰∏ÄË¶ß„Å´Êàª„Çã
      </a>
      <div class="flex flex-col md:flex-row gap-8 items-end">
        <div class="w-full md:w-2/3">
           <span class="inline-block px-3 py-1 rounded-full text-xs font-medium bg-primary/10 text-primary mb-4 border border-primary/20">
            {project.category}
          </span>
          <h1 class="text-4xl font-bold text-main mb-4">{project.title}</h1>
          <p class="text-lg text-muted">{project.description}</p>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-6xl mx-auto px-4 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      
      <div class="lg:col-span-2 space-y-12">
        <section>
          <img 
            src={project.thumbnail} 
            alt={project.title} 
            class="w-full h-auto rounded-xl shadow-2xl border border-slate-700/50 mb-8"
          />
          
          <h2 class="text-2xl font-bold text-main mb-4 flex items-center gap-2">
            Overview
          </h2>
          <div class="text-muted leading-relaxed" set:html={project.overview || project.description} />
        </section>

        {project.challenge && (
          <section class="grid md:grid-cols-2 gap-6">
            <div class="bg-red-500/5 border border-red-500/20 p-6 rounded-xl">
              <h3 class="text-lg font-bold text-red-400 mb-2">üî• The Challenge</h3>
              <p class="text-sm text-slate-300 leading-relaxed">{project.challenge}</p>
            </div>
            <div class="bg-emerald-500/5 border border-emerald-500/20 p-6 rounded-xl">
              <h3 class="text-lg font-bold text-emerald-400 mb-2">‚úÖ The Solution</h3>
              <p class="text-sm text-slate-300 leading-relaxed">{project.solution}</p>
            </div>
          </section>
        )}

        {project.codeSnippet && (
          <section>
            <h2 class="text-2xl font-bold text-main mb-4">Key Implementation</h2>
            <div class="bg-[#0d1117] rounded-xl overflow-hidden border border-slate-800">
              <div class="flex gap-2 px-4 py-3 border-b border-slate-800 bg-slate-900/50">
                <div class="w-3 h-3 rounded-full bg-red-500/50"></div>
                <div class="w-3 h-3 rounded-full bg-yellow-500/50"></div>
                <div class="w-3 h-3 rounded-full bg-green-500/50"></div>
              </div>
              <pre class="p-4 overflow-x-auto text-sm font-mono text-slate-300"><code>{project.codeSnippet}</code></pre>
            </div>
          </section>
        )}
      </div>

      <aside class="space-y-8">
        <div class="bg-card rounded-xl p-6 border border-slate-800 sticky top-24">
          <h3 class="text-lg font-bold text-main mb-4">Tech Stack</h3>
          <div class="flex flex-wrap gap-2 mb-8">
            {project.tags.map(tag => (
              <span class="px-3 py-1 bg-slate-800 text-slate-300 text-sm rounded-md border border-slate-700">
                {tag}
              </span>
            ))}
          </div>

          <div class="flex flex-col gap-3">
            {project.demoUrl && (
              <a href={project.demoUrl} target="_blank" class="w-full py-3 px-4 bg-primary hover:bg-blue-600 text-white font-medium rounded-lg text-center transition-colors shadow-lg shadow-blue-500/20">
                Live Demo üöÄ
              </a>
            )}
            {project.repoUrl && (
              <a href={project.repoUrl} target="_blank" class="w-full py-3 px-4 bg-slate-800 hover:bg-slate-700 text-white font-medium rounded-lg text-center transition-colors border border-slate-700">
                GitHub Repository
              </a>
            )}
          </div>
        </div>
      </aside>

    </div>
  </div>
</Layout>